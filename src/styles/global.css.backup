/* src/styles/global.css */
@import "tailwindcss";
@import '@fontsource-variable/alegreya';
@import "@fontsource/ephesis";
@import "@fontsource/rubik-dirt";
@import "tw-animate-css";

@custom-variant dark (&:is(.dark *));

/* Unicorn Display (archivo local en /public/fonts) */
@font-face {
  font-family: "Unicorn Display";
  src: url("/fonts/DavidMatos-Unicorn-Display.otf") format("opentype");
  font-display: swap;
  font-weight: 400;
  font-style: normal;
}

/* Tokens Tailwind v4 */
@theme {
  --color-primary: #E4572E;
  --color-primary-600: #B53A0A;
  --color-ink: #1F1F1F;
  --color-wood-light: #D0B089;
  --color-wood-dark: #8C6239;
  --color-parchment: #E9DDC8;
  --color-accent: #2BA1B8;

  --font-display: "Rubik Dirt", system-ui, sans-serif;
  --font-title: "Unicorn Display", serif;
  --font-ui: 'Alegreya Variable', serif;
  --font-script: "Ephesis", cursive;

  --radius: 0.5rem;
}

/* Fondo tipo papel envejecido para todo el sitio */
.paper-bg {
  background:
    /* Manchas de envejecimiento */
    radial-gradient(ellipse 200px 150px at 20% 10%, rgba(139, 108, 67, 0.08), transparent),
    radial-gradient(ellipse 300px 200px at 80% 20%, rgba(160, 134, 91, 0.06), transparent),
    radial-gradient(ellipse 150px 100px at 60% 80%, rgba(139, 108, 67, 0.05), transparent),
    radial-gradient(ellipse 250px 180px at 10% 70%, rgba(160, 134, 91, 0.07), transparent),
    radial-gradient(ellipse 180px 120px at 90% 90%, rgba(139, 108, 67, 0.06), transparent),
    
    /* Textura de fibras del papel */
    repeating-linear-gradient(
      0deg,
      transparent,
      transparent 2px,
      rgba(139, 108, 67, 0.02) 2px,
      rgba(139, 108, 67, 0.02) 4px
    ),
    repeating-linear-gradient(
      90deg,
      transparent,
      transparent 2px,
      rgba(160, 134, 91, 0.015) 2px,
      rgba(160, 134, 91, 0.015) 4px
    ),
    
    /* Sombras suaves para dar profundidad */
    radial-gradient(1200px 600px at 50% -200px, rgba(139, 108, 67, 0.03), transparent),
    radial-gradient(800px 400px at 0% 20%, rgba(160, 134, 91, 0.025), transparent),
    radial-gradient(800px 400px at 100% 80%, rgba(139, 108, 67, 0.025), transparent),
    
    /* Color base de parchment */
    linear-gradient(135deg, 
      #E9DDC8 0%, 
      #EDE1CA 25%, 
      #E7DBC6 50%, 
      #EBE0C9 75%, 
      #E9DDC8 100%
    );
  
  background-attachment: fixed;
  color: var(--color-ink);
  position: relative;
}

/* Efecto de bordes desgastados con pseudo-elementos */
.paper-bg::before {
  content: '';
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background:
    radial-gradient(ellipse 300px 100px at 0% 0%, rgba(139, 108, 67, 0.1), transparent),
    radial-gradient(ellipse 300px 100px at 100% 0%, rgba(139, 108, 67, 0.08), transparent),
    radial-gradient(ellipse 300px 100px at 0% 100%, rgba(139, 108, 67, 0.08), transparent),
    radial-gradient(ellipse 300px 100px at 100% 100%, rgba(139, 108, 67, 0.1), transparent);
  pointer-events: none;
  z-index: -1;
}
  src: url("/fonts/DavidMatos-Unicorn-Display.otf") format("opentype");
  font-display: swap;
  font-weight: 400;
  font-style: normal;
}

/* Tokens Tailwind v4 */
@theme {
  --color-primary: #E4572E;
  --color-primary-600: #B53A0A;
  --color-ink: #1F1F1F;
  --color-wood-light: #D0B089;
  --color-wood-dark: #8C6239;
  --color-parchment: #E9DDC8;
  --color-accent: #2BA1B8;

  --font-display: "Rubik Dirt", system-ui, sans-serif;
  --font-title: "Unicorn Display", serif;
  --font-ui: 'Alegreya Variable', serif;
  --font-script: "Ephesis", cursive;
}


a, button, select, option, input{
  @apply cursor-pointer
}

/* Utilidades tipográficas */
.font-ui { font-family: var(--font-ui); }
.font-display { font-family: var(--font-display); }
.font-title { font-family: var(--font-title); }
.font-script { font-family: var(--font-script); }

/* Base mobile + helpers */
.section { @apply px-4 py-10 sm:py-14; }
.section-title { @apply font-ui  text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold text-center mb-6; }

/* Botón CTA */
.btn-primary {
  display: inline-flex !important;
  align-items: center;
  gap: 0.5rem;
  border-radius: 0.75rem;
  padding: 0.75rem 1.25rem;
  font-weight: 700;
  letter-spacing: 0.025em;
  background-color: var(--color-primary);
  color: white;
  transition: background-color 0.15s ease-in-out;
}

.btn-primary:hover {
  background-color: var(--color-primary-600);
}

/* Variante para móvil que sobrescribe el display */
.btn-primary.block {
  display: flex !important;
  justify-content: center;
  width: 100%;
}

/* Animación fade-in suave */
@keyframes fade-in {
  from {
    opacity: 0;
    transform: translateY(20px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.animate-fade-in {
  animation: fade-in 0.8s ease-out;
  opacity: 0;
}

.section-bg { @apply bg-[--color-parchment] text-[--color-ink]; }

/* Fondo tipo papel para todo el sitio */
.paper-bg {
  /* Fallback “papel” sin imagen: */
  background:
    radial-gradient(1200px 600px at 50% -200px, rgba(0,0,0,0.04), transparent),
    radial-gradient(800px 400px at 0% 20%, rgba(0,0,0,0.03), transparent),
    radial-gradient(800px 400px at 100% 80%, rgba(0,0,0,0.03), transparent),
    linear-gradient(transparent 0 0), var(--color-parchment);
  background-attachment: fixed;
  color: var(--color-ink);
}


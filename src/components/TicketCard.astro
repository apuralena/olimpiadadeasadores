---
// src/components/TicketCard.astro

const {
  title,
  description,
  price,
  oldprice,
  includes,
  ticketUrl,
  whatsappUrl,
} = Astro.props;
---

<div
  class='p-6 bg-white/60 backdrop-blur-sm border border-[--color-wood-light]/50 rounded-xl hover:bg-white/70 hover:border-[--color-wood-light]/70 transition-all duration-300 shadow-lg hover:shadow-xl hover:-translate-y-1 flex flex-col gap-5 relative group'
>
  <!-- Contenido principal -->
  <div class='space-y-4'>
    <h3
      class='font-title text-2xl lg:text-3xl text-[--color-ink] font-bold group-hover:text-[--color-primary] transition-colors duration-300'
    >
      {title}
    </h3>

    <div class='space-y-3'>
      <p class='text-lg text-[--color-ink]/80 font-ui leading-relaxed'>
        {description}
      </p>
      <p
        class='text-base text-[--color-ink]/70 font-ui bg-[--color-parchment]/30 p-3 rounded-lg border-l-4 border-[--color-wood-light]'
      >
        {includes}
      </p>
    </div>

    <!-- SecciÃ³n de precios mejorada -->
    <div class='border-t border-[--color-wood-light]/40 pt-5'>
      <div class='flex items-center gap-4 mb-2'>
        <p
          class='text-xl text-[--color-ink]/50 line-through font-ui decoration-2'
        >
          {oldprice}
        </p>
        <span
          class='text-sm text-white font-bold bg-red-500 px-3 py-1.5 rounded-full shadow-sm'
        >
          OFERTA
        </span>
      </div>
      <p
        class='text-sm text-[--color-ink]/60 font-ui mb-3 flex items-center gap-1'
      >
        <span class='w-2 h-2 bg-red-500 rounded-full animate-pulse'></span>
        Quedan pocas disponibles
      </p>
      <p
        class='font-bold text-3xl text-[--color-primary] font-display drop-shadow-sm'
      >
        {price}
      </p>
    </div>

    <!-- Botones premium -->
    <div class='flex flex-col sm:flex-row gap-3 pt-3'>
      <a
        href={ticketUrl}
        target='_blank'
        class='flex-1 py-3.5 px-5 bg-[--color-primary] hover:bg-[--color-primary-600] text-black font-bold rounded-xl text-center transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl transform active:scale-95'
      >
        ðŸ’³ Comprar online
      </a>
      <a
        href={whatsappUrl}
        target='_blank'
        class='flex-1 py-3.5 px-5 bg-green-600 hover:bg-green-700 text-white font-bold rounded-xl text-center transition-all duration-300 hover:scale-105 shadow-lg hover:shadow-xl transform active:scale-95 flex items-center justify-center gap-2'
      >
        <svg class='w-5 h-5' fill='currentColor' viewBox='0 0 24 24'>
          <path
            d='M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893A11.821 11.821 0 0020.885 3.787'

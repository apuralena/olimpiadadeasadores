---
import { event } from "../content/event";
---

<section id='sponsors' data-section class='section scroll-mt-20'>
  <div class='container text-center'>
    <h2 class='section-title'>Sponsors & Colaboradores</h2>

    <div class='mt-8 grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-6'>
      {
        event.sponsors.map((s) => (
          <div
            class='group rounded-2xl shadow-md p-6 flex flex-col items-center justify-center
                 border border-black/5 transition-all hover:shadow-lg hover:scale-105'
          >
            <a
              href={s.href}
              target='_blank'
              rel='noopener noreferrer'
              class='flex flex-col items-center'
            >
              <img
                src={s.image}
                alt={s.name}
                class='w-32 h-32 object-contain mb-3 transition-transform group-hover:scale-110'
              />
              <span class='text-sm font-semibold text-gray-800'>{s.name}</span>
            </a>
          </div>
        ))
      }
    </div>
  </div>
</section>
